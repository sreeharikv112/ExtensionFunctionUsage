<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TVSubtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/textViewColorDarkGray</item>
        <item name="android:textSize">@dimen/text_size_20</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="TVSubtitle2" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">@color/textViewColorDarkGray</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextInputLayout1" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>
